[Unit]
Description=Aplus Meta-Controller
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/aplus/aplus.env
WorkingDirectory=/srv/aplus
ExecStart=/usr/bin/python3 -m meta_controller.run_metacontroller
Restart=on-failure
RestartSec=5
StandardOutput=append:/var/log/aplus-meta.log
StandardError=append:/var/log/aplus-meta.log

[Install]
WantedBy=multi-user.target
