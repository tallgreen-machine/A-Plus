[Unit]
Description=TradePulse IQ FastAPI Dashboard
After=network.target

[Service]
ExecStart=/srv/trad/.venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 8000
WorkingDirectory=/srv/trad
Restart=always
RestartSec=5s
User=root
Group=root
EnvironmentFile=/etc/trad/trad.env
StandardOutput=append:/var/log/trad-dashboard.log
StandardError=append:/var/log/trad-dashboard.log

# Process cleanup settings
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30s
SendSIGKILL=yes

[Install]
WantedBy=multi-user.target
