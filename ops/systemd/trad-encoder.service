[Unit]
Description=Trad Encoder (compute embeddings)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/trad/trad.env
WorkingDirectory=/srv/trad
ExecStart=/usr/bin/python3 -m encoder.run_encoder
Restart=on-failure
RestartSec=5
StandardOutput=append:/var/log/trad-encoder.log
StandardError=append:/var/log/trad-encoder.log

[Install]
WantedBy=multi-user.target
