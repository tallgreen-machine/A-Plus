[Unit]
Description=Aplus Encoder (compute embeddings)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/aplus/aplus.env
WorkingDirectory=/srv/aplus
ExecStart=/usr/bin/python3 -m encoder.run_encoder
Restart=on-failure
RestartSec=5
StandardOutput=append:/var/log/aplus-encoder.log
StandardError=append:/var/log/aplus-encoder.log

[Install]
WantedBy=multi-user.target
