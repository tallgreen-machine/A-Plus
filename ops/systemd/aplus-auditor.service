[Unit]
Description=Run the Aplus Pattern Auditor
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/srv/aplus/.venv/bin/python /srv/aplus/ops/scripts/run_auditor.py
WorkingDirectory=/srv/aplus
Restart=on-failure
User=root
Group=root
EnvironmentFile=/etc/aplus/aplus.env

[Install]
WantedBy=multi-user.target
